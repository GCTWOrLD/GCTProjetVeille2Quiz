<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetVeille2Quiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="successToast">
        <item name="stColorBackground">#94FFAB</item>
        <item name="stTextColor">@color/black</item>
        <item name="stTextBold">true</item>
        <item name="stIconStart">@drawable/ic_baseline_check_24</item>
        <item name="stStrokeColor">@color/black</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stLength">SHORT</item>
    </style>

    <style name="failToast">
        <item name="stColorBackground">#F5364F</item>
        <item name="stTextColor">@color/black</item>
        <item name="stTextBold">true</item>
        <item name="stIconStart">@drawable/ic_baseline_clear_24</item>
        <item name="stStrokeColor">@color/black</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stLength">SHORT</item>
    </style>
</resources>